# AIDEV-NOTE: Environment variables template for KOL Platform API

# Application Configuration
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
API_TITLE="KOL Platform API"
API_VERSION="0.1.0"

# Database Configuration (PostgreSQL with pgvector)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/kol_platform
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis Configuration (Caching and Background Tasks)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
ALLOWED_HOSTS=["*"]

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=uploads

# Background Tasks (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# External Services
GO_SCRAPER_SERVICE_URL=http://localhost:8080
GO_SCRAPER_API_KEY=

# AI/ML Configuration
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# KOL Scoring Configuration (JSON format)
SCORING_WEIGHTS={"engagement_rate": 0.3, "follower_quality": 0.25, "content_relevance": 0.2, "brand_safety": 0.15, "posting_consistency": 0.1}

# Budget Tier Configuration (JSON format)
BUDGET_TIERS={"nano": {"min_followers": 1000, "max_followers": 10000, "avg_cost_per_post": 50}, "micro": {"min_followers": 10000, "max_followers": 100000, "avg_cost_per_post": 500}, "mid": {"min_followers": 100000, "max_followers": 1000000, "avg_cost_per_post": 5000}, "macro": {"min_followers": 1000000, "max_followers": 10000000, "avg_cost_per_post": 50000}}

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO